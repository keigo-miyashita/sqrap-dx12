{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "vendor": {
    "microsoft.com/VisualStudioSettings/CMake/1.0": {
      "intelliSenseMode": "windows-msvc-x64",
      "hostOS": [ "windows" ]
    }
  },
  "configurePresets": [
    {
      "name": "x64-Debug",
      "displayName": "x64 Debug",
      "description": "Debug build using Ninja and MSVC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/x64-Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/x64-Debug"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64"
      }
    },
    {
      "name": "x64-Release",
      "displayName": "x64 Release",
      "description": "Release build using Ninja and MSVC",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/x64-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/x64-Release"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-Debug",
      "configurePreset": "x64-Debug"
    },
    {
      "name": "x64-Release",
      "configurePreset": "x64-Release"
    }
  ],
  "testPresets": [
    {
      "name": "x64-Debug",
      "configurePreset": "x64-Debug"
    },
    {
      "name": "x64-Release",
      "configurePreset": "x64-Release"
    }
  ]
}
